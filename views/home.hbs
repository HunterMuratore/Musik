<section class="col align-center post-output">
  {{#each posts as |post|}}
  <div class="song-card w-full md:w-1/2 lg:w-1/3 bg-white shadow-md rounded-lg p-4 m-4">
    <h2>{{post.artist}} - {{post.track}}</h2>
    <p>{{post.album_name}}</p>
    <img src="{{post.album_cover}}" alt="{{post.album_name}} Cover" class="w-40 h-40" />
    <p>{{post.comment}} by {{author.username}}</p>
  </div>
  {{/each}}
</section>