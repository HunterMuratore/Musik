<section class="hero bg-white">
  <video class="w-full h-80 bg-white" autoplay loop muted playsinline>
    <source src="/assets/video/musik.mp4" type="video/mp4">
    Your browser does not support the video tag.
    </video>
</section>

<section class="post-section mt-4 text-center grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  {{#each posts as |post|}}
  <div class="song-card bg-white p-4 rounded-lg shadow-md">
    <p class ="text-sm">{{author.username}} is listening to</p>
    <img src="{{post.album_cover}}" alt="{{post.album_name}} Cover" class="w-40 h-40 mx-auto my-1"/>
    <h2 >
      <span class="font-semibold">{{post.track}}</span> - {{post.artist}}</h2>
    <p>{{post.album_name}}</p>
    <p><button class="audio-control-btn" data-audio="{{post.audio_url}}">
      <i class="fa-solid fa-play" style="color: #71d26a;"></i>
    </button><span class="ms-2">Play</span></p>
    {{#if post.comment}}
    <p class="comment">{{post.comment}}</p>
    {{else}}
    {{/if}}
  </div>
  {{/each}}
</section>