<section class="col align-center post-output">
  {{#each posts as |post|}}
  <div class="song-card">
    <p>{{post.artist}} - {{post.track}}</p>
    <p>{{post.album_name}}</p>
    <img src="{{post.album_cover}}" alt="{{post.album_name}} Cover" class="w-40 h-40" />
    <p>{{post.comment}} by {{author.username}}</p>
  </div>
  {{/each}}
</section>