<form action="/profile" method="POST">
    <h1>What are you listening to?</h1>

 {{#each errors}}
    <p class="error text-center">{{this}}</p>
  {{/each}}

  <input type="text" name="track" placeholder="What song are you listening to?" required>
  <input type="text" name="comment" placeholder="Tell us what you think of it!">
  <button>Submit</button>
</form>

<section>
  {{#each posts as |post|}}
    <div class="song-card">
      <p>{{post.track}}</p>
      <p>{{post.artist}}</p>
      <p>{{post.album_cover}}</p>
      <p>{{post.album_name}}</p>
      <p>{{post.comment}} by {{author.username}}</p>
    </div>
{{/each}}
</section>