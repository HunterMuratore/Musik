<section class="mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mx-auto sm:mx-0">
  {{#each posts as |post|}}
  <div class="song-card bg-white p-4 rounded-lg shadow-md">
    <h2>{{post.artist}} - {{post.track}}</h2>
    <p>{{post.album_name}}</p>
    <img class="album_cover" src="{{post.album_cover}}" alt="{{post.album_name}} Cover" class="w-40 h-40" />
    <p>{{post.comment}} by {{author.username}}</p>
  </div>
  {{/each}}

</section>